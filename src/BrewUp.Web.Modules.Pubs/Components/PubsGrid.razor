@inherits PubsGridBase
@using MudBlazor
@using BrewUp.Web.Modules.Pubs.Extensions.Dtos

<MudTable Items="@Pubs" Hover="true" 
          @ref="MudTable" 
          Striped="true" 
          RowClassFunc="@SelectedRowClassFunc" 
          OnRowClick="RowClickEvent" T="PubJson"
          id="pubs-grid">
	<HeaderContent>
		<MudTh>Beer Type</MudTh>
		<MudTh>Quantity</MudTh>
	</HeaderContent>
	<RowTemplate>
		<MudTd DataLabel="Name">@context.PubName</MudTd>
	</RowTemplate>
</MudTable>