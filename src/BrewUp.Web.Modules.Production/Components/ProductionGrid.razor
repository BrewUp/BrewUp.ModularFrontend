@inherits ProductionGridBase
@using MudBlazor
@using BrewUp.Web.Modules.Production.Extensions.Dtos

<MudTable Items="@ProductionOrders" Hover="true" 
          @ref="MudTable"
          Striped="true"
          RowClassFunc="@SelectedRowClassFunc"
          OnRowClick="RowClickEvent"
          T="ProductionOrderJson">
	<HeaderContent>
		<MudTh>Order Number</MudTh>
		<MudTh>Order Date</MudTh>
		<MudTh>Order State</MudTh>
	</HeaderContent>
	<RowTemplate>
		<MudTd DataLabel="#">@context.ProductionOrderNumber</MudTd>
		<MudTd DataLabel="Date">@context.OrderData</MudTd>
		<MudTd DataLabel="State">@context.Status</MudTd>
	</RowTemplate>
</MudTable>